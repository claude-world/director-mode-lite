{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Hook configuration for Self-Evolving Loop",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": ".self-evolving-loop/hooks/log-event.sh file_write"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".self-evolving-loop/hooks/log-event.sh file_edit"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".self-evolving-loop/hooks/log-event.sh bash_command"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".self-evolving-loop/hooks/continue-loop.sh"
          }
        ]
      }
    ]
  }
}
